│   │   ├── DocumentCreate.tsx  # Создание документа
│   │   ├── DocumentDetail.tsx  # Просмотр/редактирование
│   │   └── QAPage.tsx          # Страница Q/A
│   ├── types/                  # TypeScript типы
│   │   ├── auth.ts
│   │   ├── document.ts
│   │   └── api.ts
│   ├── utils/                  # Утилиты
│   │   └── validation.ts       # Zod схемы валидации
