│   │   ├── DocumentCard.tsx    # Карточка документа
│   │   ├── QADialog.tsx        # Диалог с Q/A модулем
│   │   └── StatusBadge.tsx     # Отображение статуса
│   ├── contexts/               # React Context
│   │   └── AuthContext.tsx     # Контекст аутентификации
│   ├── hooks/                  # Custom hooks
│   │   ├── useAuth.ts
│   │   └── useDocuments.ts
│   ├── pages/                  # Страницы приложения
│   │   ├── Login.tsx
